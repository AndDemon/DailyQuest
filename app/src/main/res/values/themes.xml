<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.DailyQuest" parent="Theme.Material3.DynamicColors.Light.NoActionBar">

    </style>

    <style name="Theme.DailyQuest" parent="Base.Theme.DailyQuest" />

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.Card.Media</item>
    </style>

    <style name="bymam" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.Card.Media</item>
    </style>

    <style name="bymam_elev" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.Card.Media</item>
    </style>

    <style name="bymam_outl" parent="Widget.Material3.CardView.Outlined">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.Card.Media</item>
    </style>

    <style name="Widget.App.TextInputEditText.EnterName" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:gravity">center_horizontal</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <color name="logo_tint">#000000</color>

    <style name="Theme.DailyQuest.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.DailyQuest.AppWidgetContainer" parent="Theme.DailyQuest.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>