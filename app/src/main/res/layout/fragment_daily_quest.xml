<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/complexity_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/complexity_levels" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quests_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/streak_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Streak: 0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/step_counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps: 0/1000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"/>

    </LinearLayout>
</LinearLayout>